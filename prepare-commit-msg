#!/usr/bin/python3

import random
import json
import sys


with open('.git/hooks/emojis.json') as f:
	data = json.load(f)

emojis = data.get('emojis', 'ðŸ’”')

commit_msg_filepath = sys.argv[1]

with open(commit_msg_filepath, 'r+') as f:
	content = f.read()
	f.seek(0, 0)

	f.write(f'{random.choice(emojis)} {content}')
